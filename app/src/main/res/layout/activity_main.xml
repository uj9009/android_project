<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">



    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/img_slide">
    </ViewFlipper>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:gravity="center"
        android:id="@+id/main_coffee"
        android:text="Coffee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/coffee1_img"
            android:src="@drawable/coffee1"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/coffee2_img"
            android:src="@drawable/coffee2"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/coffee3_img"
            android:src="@drawable/coffee3"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/coffee4_img"
            android:src="@drawable/coffee4"/>

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/btn_more1"
        android:text="more"
        android:textSize="10dp"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:gravity="center"
        android:id="@+id/main_world"
        android:text="World" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/world1_img"
            android:src="@drawable/coffee1"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/world2_img"
            android:src="@drawable/coffee2"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/world3_img"
            android:src="@drawable/coffee3"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/world4_img"
            android:src="@drawable/coffee4"/>

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/btn_more2"
        android:text="more"
        android:textSize="10dp"/>

</LinearLayout>